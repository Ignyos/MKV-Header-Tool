<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AppShell"
             x:Class="AppShell.MainPage"
             Title="Blazor Hybrid Template">

    <!-- BlazorWebView hosts the frontend HTML/CSS/JS -->
    <BlazorWebView x:Name="blazorWebView" HostPage="wwwroot/index.html">
        <BlazorWebView.RootComponents>
            <RootComponent Selector="#blazor-bridge" ComponentType="{x:Type local:Components.App}" />
        </BlazorWebView.RootComponents>
    </BlazorWebView>

</ContentPage>
